@model AddBarViewModel
@{
    ViewData["Title"] = "Add Bar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Bar</h1>

@{ var statusMessage = TempData["Status"]?.ToString(); }
@if (!string.IsNullOrWhiteSpace(statusMessage))
{

    <div class="alert alert-danger  ">
        @statusMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="/Distribution/Bars/Add">

            <partial name="_BarProperties" model="@Model" />

            <button class="btn btn-outline-info load-add-city-form">Add City</button>
            <input type="submit" class="btn btn-light" />
        </form>
    </div>
    <div class="col-md-6">
        <div style="display:none" id="city-div">
            <div class="m-4">
                <div>
                    City Name:
                    <input type="text" name="cityName" class=" form-control" id="city-name" />
                </div>
            </div>
            <button class="btn btn-light" id="city-to-db">Add new city</button>
        </div>
    </div>
</div>



