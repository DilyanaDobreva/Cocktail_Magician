@model BarsListViewModel
@{
    ViewData["Title"] = "Bars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bars</h1>
<a href="/Distribution/Bars/Add">Add bar</a>
<a href="/Distribution/Bars/Search">Search</a>

<hr />
<div class="container">
    @if (Model.AllBars.Count() == 0)
    {
        <div>
            No bars in list!
        </div>
    }
    <div class="row">
        @foreach (var bar in Model.AllBars)
        {
            <partial name="_BarRow" model="@bar" />
        }
    </div>
</div>
<ul class="pagination">
    @if (Model.Paging.HasPrevious)
    {
        <li class="page-item"><a class="page-link" href="/Distribution/Bars/Index/@Model.Paging.PreviousPage">Previous</a></li>
    }
    @for (int i = 1; i <= Model.Paging.LastPage; i++)
    {
        @if (Model.Paging.CurrentPage == i)
        {
            <li class="page-item active"><a class="page-link" href="/Distribution/Bars/Index/@i">@i</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" href="/Distribution/Bars/Index/@i">@i</a></li>
        }
    }
    @if (Model.Paging.HasNext)
    {
        <li class="page-item"><a class="page-link" href="/Distribution/Bars/Index/@Model.Paging.NextPage">Next</a></li>
    }
</ul>

