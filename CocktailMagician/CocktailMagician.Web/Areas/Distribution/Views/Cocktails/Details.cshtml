@model CocktailDetailsViewModel
@{
    ViewData["Title"] = " Cocktail details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">
    <div class="col-md-6">
        <img class="details-image" src="@Model.ImageURL" alt="Card image cap">
    </div>
    <div class="col-md-6">
        <h3>@Model.Name</h3>
        <div class="m-4">
            @if (User.IsInRole("admin"))
            {
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Delete cokctail
                </button>

                <!-- Modal -->
                <div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div>Are you sure you want to delete @Model.Name cocktail?</div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <form asp-controller="Cocktails" asp-action="Delete" asp-route-id="@Model.Id">
                                    <button type="submit" class="btn btn-primary" >Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <h5>Recipe: </h5>
                @foreach (var ingr in Model.Ingredients)
                {
                    <div> @ingr.Value @ingr.Unit    @ingr.Name</div>
                }
                <a asp-action="EditIngredients" asp-controller="Cocktails" asp-route-id="@Model.Id">Edit Ingredients</a>

            }
            else
            {
                <h5>Ingredients:</h5>
                <div> @Model.ListedIngredients </div>
            }
        </div>
        @if (Model.Bars != null && Model.Bars?.Count() != 0)
        {
            <div class="m-4">
                <h5>Bars:</h5>
                @foreach (var bar in Model.Bars)
                {
                    <div class="m-3">
                        <div class="row">
                            <div class="col-sm-2">
                                <img src=@bar.ImageURL height="50" />
                            </div>
                            <div class="col-sm-8">
                                <div class="p-2" align="center">
                                    <a asp-controller="Bars" asp-action="Details" asp-route-id="@bar.Id">@bar.Name</a>
                                    <div>@bar.Address, @bar.City</div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        }
        <div>
            @if (User.IsInRole("admin"))
            {
                <a asp-action="AddBars" asp-controller="Cocktails" asp-route-id="@Model.Id">Add bar</a>
                <a asp-action="RemoveBars" asp-controller="Cocktails" asp-route-id="@Model.Id">Remove bar</a>
            }
        </div>
    </div>
</div>

