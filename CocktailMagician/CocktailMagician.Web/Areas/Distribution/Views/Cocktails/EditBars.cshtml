@model EditBarsViewModel
@{
    ViewData["Title"] = "Edit Bars to cocktail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div align="center">
    <div class="col-md-6">
        <h3>Add Bar for cocktail @Model.CocktailName</h3>
        <form asp-action="EditBars" asp-controller="Cocktails">
            <div class="m-4">
                <label>Select bars to add:</label>
                <select multiple="multiple" class="multiple-select2 input-group input-group-lg" asp-for="@Model.BarsToAdd" asp-items="@Model.AllOtherBars">
                </select>
            </div>
            <div class="m-4">
                <label>Select bars to remove:</label>
                <select multiple="multiple" class="multiple-select2 input-group input-group-lg" asp-for="@Model.BarsToRemove" asp-items="@Model.BarsOfCocktail">
                </select>
            </div>
            <input type="submit" class="btn btn-light" />
        </form>
    </div>
</div>




