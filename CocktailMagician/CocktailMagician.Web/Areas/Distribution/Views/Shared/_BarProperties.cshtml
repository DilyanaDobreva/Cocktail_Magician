@model AddBarViewModel
<div class="m-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-2">
        <label asp-for="@Model.Name" class="control-label mb-0" align="left"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="control-label">Image</div>
    <div class="custom-file mb-2">
        <input type="file" asp-for="@Model.Image" class="form-control-file input-border" />
        @*<label asp-for="@Model.Image" class="custom-file-label margin-right-1" align="right"></label>*@
        <span asp-validation-for="@Model.Image" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.PhoneNumber" class="control-label mb-0" align="right"></label>
        <input asp-for="@Model.PhoneNumber" class="form-control" />
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.Address.Address" class="control-label mb-0" align="right"></label>
        <input asp-for="@Model.Address.Address" class="form-control" />
        <span asp-validation-for="@Model.Address.Address" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.Address.Latitude" class="control-label mb-0" align="right"></label>
        <input asp-for="@Model.Address.Latitude" class="form-control" />
        <span asp-validation-for="@Model.Address.Latitude" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.Address.Longitude" class="control-label mb-0" align="right"></label>
        <input asp-for="@Model.Address.Longitude" class="form-control" />
        <span asp-validation-for="@Model.Address.Longitude" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="@Model.Address.CityId" class="control-label mb-0" align="right">City</label>
        <select asp-for="@Model.Address.CityId" asp-items="@Model.AllCities" class="form-control" id="list-of-cities">
            <option hidden disabled selected="">Select...</option>
        </select>
        @*<span asp-validation-for="@Model.Address.CityId" class="text-danger"></span>*@
    </div>
</div>
