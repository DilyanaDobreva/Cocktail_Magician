@model RegisterViewModel
    <link href="~/css/login.css" rel="stylesheet" />


<div class="wrapper fadeInDown">
    <div id="formContent">
        <h1>Sign up</h1>
        <form asp-action="Register" asp-controller="Auth">
             <div class="group">
            <input asp-for="RegisterUsername" class="form-control" placeholder="User Name" />
            <div>
                <span asp-validation-for="RegisterUsername" class="text-danger"></span>
            </div>
        </div>
            <div class="group">
                <input asp-for="RegisterPassword" class="form-control" placeholder="Password" />
                <div>
                    <span asp-validation-for="RegisterPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="group">
                <input asp-for="ComparePassword" class="form-control" placeholder="Confirm Password" />
                <div>
                    <span asp-validation-for="ComparePassword" class="text-danger"></span>
                </div>
            </div>
        <div class="group auth-group">
            <button type="submit" class="btn btn-pink auth-btn">Sign up</button>
        </div>
        </form>

    </div>
</div>