@model CreateUserViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var statusMessage = TempData["Status"]?.ToString(); }
@if (!string.IsNullOrWhiteSpace(statusMessage))
{

<div class="alert alert-danger  ">
    @statusMessage
</div>
}
<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RegisterUsername" class="control-label"></label>
                <input asp-for="RegisterUsername" class="form-control" />
                <span asp-validation-for="RegisterUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterPassword" class="control-label"></label>
                <input asp-for="RegisterPassword" class="form-control" />
                <span asp-validation-for="RegisterPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComparePassword" class="control-label"></label>
                <input asp-for="ComparePassword" class="form-control" />
                <span asp-validation-for="ComparePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="RoleId" asp-items="@Model.Role " class="form-control">
                    <option hidden disabled selected="">Select...</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

